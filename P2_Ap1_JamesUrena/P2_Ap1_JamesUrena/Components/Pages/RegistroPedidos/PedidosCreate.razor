@page "/Pedidos/Create"
@inject PedidosServices pedidosService
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<PageTitle>Registrar Pedido</PageTitle>

<EditForm Model="@Pedido" OnValidSubmit="Guardar">
    <DataAnnotationsValidator />

    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header text-center">
                <h5 class="card-title">Registro de Pedido</h5>
            </div>

            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label class="form-label"><strong>Fecha</strong></label>
                        <InputDate class="form-control" @bind-Value="Pedido.Fecha" />
                        <ValidationMessage For="@(() => Pedido.Fecha)" />
                    </div>

                    <div class="col-md-8">
                        <label class="form-label"><strong>Cliente</strong></label>
                        <InputText class="form-control" @bind-Value="Pedido.NombreCliente" />
                        <ValidationMessage For="@(() => Pedido.NombreCliente)" />
                    </div>
                </div>

                <div class="border border-success p-3 mt-3">
                    <h6 class="text-center mb-3">Detalle del Pedido</h6>

                    <div class="row g-2 align-items-center mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Componente</label>
                            <InputSelect class="form-select" @bind-Value="Detalle.ComponenteId" @onchange="ActualizarPrecio">
                                <option value="0" disabled>Seleccione un componente</option>
                                @foreach (var item in ListaComponentes)
                                {
                                    <option value="@item.ComponenteId">@item.Descripcion (Existencia: @item.Existencia)</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">Cantidad</label>
                            <InputNumber class="form-control" @bind-Value="Detalle.Cantidad" />
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">Precio</label>
                            <InputNumber class="form-control" @bind-Value="Detalle.Precio" />
                        </div>

                        <div class="col-md-2 text-center mt-4">
                            <button type="button" class="btn btn-outline-success bi bi-plus" @onclick="AgregarDetalle"> Agregar</button>
                        </div>
                    </div>

                    <hr />

                    <table class="table table-bordered table-striped mt-3">
                        <thead class="table-light">
                            <tr class="text-center">
                                <th>ComponenteId</th>
                                <th>Descripción</th>
                                <th>Precio</th>
                                <th>Cantidad</th>
                                <th>Importe</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Pedido.PedidoDetalles)
                            {
                                var componente = ListaComponentes.FirstOrDefault(c => c.ComponenteId == item.ComponenteId);
                                <tr class="text-center">
                                    <td>@item.ComponenteId</td>
                                    <td>@componente?.Descripcion</td>
                                    <td>@item.Precio.ToString("N2")</td>
                                    <td>@item.Cantidad</td>
                                    <td>@(item.Cantidad* item.Precio).ToString("N2")</td>
                                    <td>
                                        <button type="button" class="btn btn-danger btn-sm bi bi-trash" @onclick="() => EliminarDetalle(item)"></button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <p><strong>Cantidad de Detalles:</strong> @Pedido.PedidoDetalles.Count</p>
                    </div>
                    <div class="col-md-6 text-end">
                        <p><strong>Total:</strong> @Pedido.Total.ToString("N2")</p>
                    </div>
                </div>
            </div>

            <div class="card-footer text-center mt-2">
                <a href="/Pedidos/Index" class="btn btn-secondary bi bi-arrow-left"> Volver</a>
                <button type="submit" class="btn btn-primary bi bi-floppy ms-2"> Guardar</button>
            </div>
        </div>
    </div>
</EditForm>

@code {
    private Pedidos Pedido { get; set; } = new();
    private PedidoDetalles Detalle { get; set; } = new();
    private List<Componente> ListaComponentes { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        ListaComponentes = await pedidosService.ListarComponentes();
    }

    private void ActualizarPrecio(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int id))
        {
            var componente = ListaComponentes.FirstOrDefault(c => c.ComponenteId == id);
            if (componente != null)
            {
                Detalle.Precio = (double)componente.Precio;
            }
        }
    }

    private void AgregarDetalle()
    {
        if (Detalle.ComponenteId == 0 || Detalle.Cantidad <= 0 || Detalle.Precio <= 0)
            return;

        var nuevo = new PedidoDetalles
        {
            ComponenteId = Detalle.ComponenteId,
            Cantidad = Detalle.Cantidad,
            Precio = Detalle.Precio
        };

        Pedido.PedidoDetalles.Add(nuevo);
        RecalcularTotal();
        Detalle = new PedidoDetalles();
    }

    private void EliminarDetalle(PedidoDetalles item)
    {
        Pedido.PedidoDetalles.Remove(item);
        RecalcularTotal();
    }

    private void RecalcularTotal()
    {
        Pedido.Total = Pedido.PedidoDetalles.Sum(d => d.Cantidad * d.Precio);
    }

    private async Task Guardar()
    {
        if (!Pedido.PedidoDetalles.Any())
            return;

        var creado = await pedidosService.Guardar(Pedido);

        if (creado)
            navigationManager.NavigateTo("/Pedidos/Index");
    }
}
